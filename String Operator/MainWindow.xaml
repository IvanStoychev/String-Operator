        <TextBox Name="tbText" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="400"/>
        <Button Name="btnOperate" Content="Operate" HorizontalAlignment="Left" Margin="564,388,0,0" VerticalAlignment="Top" Width="75" Click="btnOperate_Click"/>

    </Grid>
